<odoo>
    <record id="view_docs_wizard" model="ir.ui.view">
        <field name="name">add.docs.wizard</field>
        <field name="model">add.documents.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sale_id" readonly="1"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="add_docs" type="object" string="Add" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
